{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "muzik-offline",
    "version": "0.3.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true,
        "setFullscreen": true,
        "setResizable": true
      },
      "os": {
        "all": true
      },
      "notification": {
        "all": true
      },
      "dialog": {
        "all": false,
        "open": true
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Music",
      "targets": "all",
      "identifier": "com.muzik-offline.dev",
      "longDescription": "A desktop music player for listening to music offline that is downloaded onto your computer in the form of mp3, wav, ogg files etc.",
      "shortDescription": "A desktop music player for listening to music offline.",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "deb": {
        "depends": [
          "libasound2-dev"
        ]
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "muzik-offline",
        "width": 980,
        "height": 623,
        "minWidth": 980,
        "minHeight": 623,
        "titleBarStyle": "Transparent",
        "decorations": false,
        "center": true
      }
    ]
  }
}
